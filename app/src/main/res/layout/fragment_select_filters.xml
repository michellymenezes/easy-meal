<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/rounded_background_scr"
        android:alpha="0.9"
        android:layout_height="470dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/filter_tv"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorSecundaryText"
            android:text="@string/filters"
            android:padding="10dp"/>
        <LinearLayout
            android:id="@+id/filter_layout"
            android:layout_below="@+id/filter_tv"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="4700dp">
            <GridView
                android:id="@+id/filter_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="2"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:background="@drawable/rounded_background_src_bottom"
        android:gravity="right">


        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:background="@drawable/bg_button"
            android:drawableRight="@drawable/ic_next"
            android:padding="6dp"
            android:text="Next"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/select_all_filters"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/next"
            android:background="@drawable/bg_button"
            android:layout_marginRight="2dp"
            android:drawableRight="@drawable/ic_check_all"
            android:padding="6dp"
            android:text="CHECK ALL"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</LinearLayout>