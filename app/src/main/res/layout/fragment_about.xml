<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"

    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_icon_ing"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_help"/>

        <TextView
            android:id="@+id/title_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@+id/iv_icon_ing"
            android:text="@string/about"
            android:textSize="20dp" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/about_0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/about_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/about_001"
                android:textSize="18dp"/>

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/about_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/about_002"
                android:textSize="18dp"/>

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/about_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/about_003"
                android:gravity="center"
                android:textSize="18dp"/>

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/about_03.1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_003.1"
                android:textSize="22dp"
                android:gravity="center"/>

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/about_04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:text="@string/about_004"
                android:gravity="center"
                android:textSize="18dp"/>

            <com.uncopt.android.widget.text.justify.JustifiedTextView
                android:id="@+id/about_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_005"
                android:gravity="center"
                android:textSize="22dp"/>


        </LinearLayout>


    </ScrollView>


</LinearLayout>