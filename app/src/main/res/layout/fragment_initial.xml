<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.projeto_les.easymeal.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_layout"
        android:orientation="vertical"
        android:weightSum="5">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_ingredients_btn"
            android:text="@string/select_ingredients"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:drawableRight="@drawable/ic_search"
            android:textSize="30dp"
            android:onClick="onSelectIngredientsButtonPressed"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/favorites_btn"
            android:text="@string/favorites"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_favorite"
            android:textSize="30dp"
            android:onClick="onFavoritesPressed"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/help_btn"
            android:layout_marginTop="20dp"

            android:text="@string/help"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_help"
            android:textSize="30dp"
            android:onClick="onHelpPressed"/>

    </LinearLayout>


</RelativeLayout>