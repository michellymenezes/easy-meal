<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:id="@+id/ingredient_layout"
        android:padding="20dp"
        >
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:background="@drawable/rounded_bg_text_input"
            android:alpha="0.9"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:layout_height="60dp"
            android:id="@+id/auto_complete_ingredient_container">

            <ImageView
                android:id="@+id/icon_ingredients_type"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:src="@drawable/ic_ingredients"
                android:layout_alignParentLeft="true"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_ingredients"
                android:layout_width="240dp"
                android:backgroundTint="@android:color/transparent"
                android:layout_toRightOf="@+id/icon_ingredients_type"
                android:layout_height="60dp">

                <EditText
                    android:id="@+id/auto_complete_ingredient"
                    android:layout_width="240dp"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_height="wrap_content"
                    android:hint="Type ingredients"
                    android:layout_alignParentLeft="true"
                    android:text=""
                    android:inputType="textCapWords"

                    />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/auto_complete_ingredient_container"
            android:background="@drawable/bg_add_button"
            android:src="@drawable/ic_add_white"
            android:paddingTop="6dp"
            android:paddingLeft="4dp"
            android:paddingBottom="4dp"
            android:paddingRight="4dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>



    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/select_ingredients_divider"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
            <ImageView
                android:id="@+id/ingredient_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:paddingRight="15dp"
                android:src="@drawable/ic_ings2"
                />

            <TextView
                android:id="@+id/type_ingredientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_marginTop="20dp"
                android:text="@string/selected_ingredients"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_toRightOf="@+id/ingredient_ic"/>



    </RelativeLayout>


    <ScrollView
        android:id="@+id/scrollView_id"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingBottom="15dp"
        android:layout_height="284dp"
        android:layout_weight="0.97">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="299dp"
                android:id="@+id/selected_ingredients_list"
                android:focusable="true"
                />
        </LinearLayout>
    </ScrollView>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="20dp"
        android:gravity="right">
        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Next"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="16dp"
            android:padding="6dp"
            android:drawableRight="@drawable/ic_next"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/clear_all_ings_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:drawableRight="@drawable/ic_clear_all"
            android:padding="6dp"
            android:text="clear"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorAccent"
            android:layout_toLeftOf="@+id/next"/>
    </RelativeLayout>


</LinearLayout>