<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/ingredient_layout">

        <TextView
            android:id="@+id/text_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ingredients"
            style="@style/Base.TextAppearance.AppCompat.Title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_ingredient"
            android:id="@+id/auto_complete_ingredient_container">

            <EditText
                android:id="@+id/auto_complete_ingredient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences|textAutoCorrect"
                android:layout_alignParentLeft="true"
                android:ems="15"
                android:text=""/>

            <Button
                android:id="@+id/clear_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_clear"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/auto_complete_ingredient"
                android:layout_alignEnd="@+id/auto_complete_ingredient" />

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:text="@string/add"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/auto_complete_ingredient_container"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/selected_ingredients"
        style="@style/TextAppearance.AppCompat.Title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_weight="0.97">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="299dp"
                android:id="@+id/selected_ingredients_list"
                android:focusable="true"
                />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="bottom">
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back_menu_btn"
            android:background="@drawable/ic_menu"
            android:layout_alignParentRight="false"
            android:onClick="onBackMenuPressed"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:background="@drawable/ic_next"
            android:layout_alignParentRight="true"
            android:onClick="onNextPressed"/>
    </RelativeLayout>
</LinearLayout>